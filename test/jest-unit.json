{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": "test/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.(t|j)s"],
  "coverageDirectory": "coverage",
  "testEnvironment": "node",
  "moduleNameMapping": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}